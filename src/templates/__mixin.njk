{% macro prevueBlock(img, svg, caption) %}
	<div class="prevue-block">
		<div class="prevue-block__wrapper">
			<div class="prevue-block__bg">
				<picture>
					<source srcset="img/{{ img }}.webp" type="image/webp">
					<source srcset="img/{{ img }}.jpg" type="image/jpeg">
					<img src="img/{{ img }}.webp" alt="">
				</picture>
			</div>
			<div class="prevue-block__wrap">
				<div class="prevue-block__up">
					<svg>
						<use xlink:href="img/sprite.svg#{{ svg }}">
					</svg>
					<a href="#" class="btn-more">
						<span class="btn-more__text">ПОДРОБНЕЕ</span>
						<div class="btn-more__square"></div>
					</a>
				</div>
				<div class="prevue-block__down">
					<h4 class="prevue-block__caption">{{ caption }}</h4>
				</div>
			</div>
		</div>
	</div>
{% endmacro %}

