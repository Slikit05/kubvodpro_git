			watchSlidesProgress: true,
			pagination: {
				el: '.gallery-slider__fraction',
				type: "fraction",
				renderFraction: function(currentClass, totalClass) {
					return '<span class="' + currentClass + '"></span> ' + 'из' + ' <span class="' + totalClass + '"></span>';
				},
			},
			navigation: {
				nextEl: '.gallery-slider__arrow-next',
