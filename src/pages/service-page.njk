{% block Scripts %}
	<script src="js/swiper.min.js"></script>
	<script>
		const targetVideos = document.querySelectorAll("[data-target-play]");

		for(let targetVideo of targetVideos) {
			targetVideo.addEventListener("click", (event) => {
				event.target.closest(".video-block").querySelector("video").play();
				event.target.style.display = 'none';
				if (event.target.closest(".video-block").querySelector("video").hasAttribute("controls")) {
					
				} else {
					event.target.closest(".video-block").querySelector("video").setAttribute("controls","controls")   
				}
			})
		}
		
	</script>
{% endblock %}