  </section>
	<section class="gray-block inner-offset">
		<div class="container">
			<div class="">
				<div class="row-title">
					<h2 class="title-md">Выполненые проекты</h2>			
				</div>
				<div class="projects-page">
					<div class="projects-page__wrapper wrapper-list">
						{{ mixin.prevueBlockTwo('prevue-two-bg1', 'НАПРАВЛЕНИЕ ДЕЯТЕЛЬНОСТИ', 'Краснодарское водохранилище Краснодарское водохранилище', 'Республика Адыгея') }}
